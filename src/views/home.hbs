<main>
    <div>
        <h1>Home</h1> <a class="btn waves-effect waves-light" href="/products/"><i class="material-icons">add</i></a>
    </div>

    <div class="row">
        {{#each products.docs}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <img src="{{this.thumbnail}}">
                </div>
                <div class="card-content">
                    <h3 class="card-title">{{this.title}}</h3>
                    <p><strong>{{this.price}}</strong></p>
                    <p>{{this.description}}</p>
                </div>
                <div class="card-action">
                    {{#if ../isSession}}
                        <form class="add-to-cart-form" action="/carts/{{../cartUser}}/product/{{this._id}}" enctype="multipart/form-data" method="POST">
                            <button class="btn waves-effect waves-light" type="submit">Agregar al Carrito</button>
                        </form>
                    {{else}}
                        <a class="btn waves-effect waves-light" href="">Ver producto</a>
                    {{/if}}
                </div>
            </div>
        </div> 
        {{/each}}
    </div>

    <div class="row">
        {{#if products.prevPage}}
            <a class="btn waves-effect waves-light" href="/?page={{products.prevPage}}">Anterior</a>
        {{/if}}

        {{#if products.nextPage}}
            <a class="btn right waves-effect waves-light" href="/?page={{products.nextPage}}">Siguiente</a>
        {{/if}}
    </div>
</main>