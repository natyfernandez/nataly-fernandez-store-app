<main class="section">
    <div class="row valign-wrapper">
        <h1 class="col s9 mb-2">Inicio</h1> 
        <a class="col s3" href="/products/"><button class="btn waves-effect waves-light right"><span class="valign-wrapper">Crear<i class="material-icons">add</i></span></button></a>
    </div>

    <div class="row">
        {{#each products.docs}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <img src="{{this.thumbnail}}">
                </div>
                <div class="card-content">
                    <h3 class="card-title">{{this.title}}</h3>
                    <p><strong>{{this.price}}</strong></p>
                    <p>{{this.description}}</p>
                </div>
                <div class="card-action">
                    <a class="btn waves-effect waves-light" href="/products/{{this._id}}">Ver producto</a>
                </div>
            </div>
        </div> 
        {{/each}}
    </div>

    <div class="row">
        {{#if products.prevPage}}
        <div class="col">
            <a class="btn col waves-effect waves-light" href="/?page={{products.prevPage}}">Anterior</a>
        </div>
        {{/if}}
        {{#if products.nextPage}}
        <div class="col right">
            <a class="btn waves-effect waves-light" href="/?page={{products.nextPage}}">Siguiente</a>
        </div>
        {{/if}}
    </div>
</main>