<main class="section">
    <div class="row m-0">
        <div class="col s12 m6 thumbnail">
            <img src="{{product.thumbnail}}" class="responsive-img">
        </div>
        <div class="col s12 m6 data">
            <h1 class="title">{{product.title}}</h1>
            <p class="price"><strong>{{product.price}}</strong></p>
            <p class="description">{{product.description}}</p>
            <div class="mt-3">
                {{#if isSession}}
                    <form class="add-to-cart-form" action="/carts/{{cartUser}}/product/{{product._id}}" enctype="multipart/form-data" method="POST">
                        <button class="btn waves-effect waves-light" type="submit">Agregar al carrito</button>
                    </form>
                {{else}}
                    <a href="/carts" class="btn waves-effect waves-light" type="submit">Agregar al carrito</a>
                {{/if}}
            </div>
        </div>
    </div>
</main>